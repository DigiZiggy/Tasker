@model WebApp.ViewModels.PaymentCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@Resources.Views.Shared._Layout.Create @Resources.Views.Shared._Layout.Payment</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Payment.MeansOfPayment" class="control-label"></label>
                <input asp-for="Payment.MeansOfPayment" class="form-control" />
                <span asp-validation-for="Payment.MeansOfPayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.PaymentCode" class="control-label"></label>
                <input asp-for="Payment.PaymentCode" class="form-control" />
                <span asp-validation-for="Payment.PaymentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.TimeOfPayment" class="control-label"></label>
                <input asp-for="Payment.TimeOfPayment" class="form-control" />
                <span asp-validation-for="Payment.TimeOfPayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Total" class="control-label"></label>
                <input asp-for="Payment.Total" class="form-control" />
                <span asp-validation-for="Payment.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Comment" class="control-label"></label>
                <input asp-for="Payment.Comment" class="form-control" />
                <span asp-validation-for="Payment.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.InvoiceId" class="control-label"></label>
                <select asp-for="Payment.InvoiceId" class ="form-control" asp-items="Model.InvoiceSelectList"></select>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-success" role="button" asp-action="Index">@Resources.Views.Shared._Layout.BackToList</a>
                <input type="submit" value=@Resources.Views.Shared._Layout.Create class="btn btn-info" style="float: right;"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

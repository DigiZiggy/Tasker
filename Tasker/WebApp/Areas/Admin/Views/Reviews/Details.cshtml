@model BLL.App.DTO.Review

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <h4 class="title c-grey-900 mT-10 mB-30">@Resources.Views.Shared._Layout.Review @Resources.Views.Shared._Layout.Details</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewComment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewComment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewGiver)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewGiver.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewReceiver)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewReceiver.Id)
        </dd>
    </dl>
</div>
<div class = "col-sm-3">
    <a class="btn btn-outline-success" role="button" asp-action="Index">@Resources.Views.Shared._Layout.BackToList</a>
    <a class="btn btn-info" role="button" style="float: right;" asp-action="Edit" asp-route-id="@Model.Id">@Resources.Views.Shared._Layout.Edit</a>
</div>

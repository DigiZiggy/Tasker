@model BLL.App.DTO.Review

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <h4 class="title c-grey-900 mT-10 mB-30">Are you sure you want to delete this review?</h4>
    <br/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewComment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewComment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewGiver)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewGiver.Id)
        </dd >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewReceiver)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewReceiver.Id)
        </dd >
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a style="margin-right: 5rem;" class="btn btn-outline-success" role="button" asp-action="Index">@Resources.Views.Shared._Layout.BackToList</a>
        <input type="submit" value=@Resources.Views.Shared._Layout.Delete class="btn btn-danger" /> 
    </form>
</div>

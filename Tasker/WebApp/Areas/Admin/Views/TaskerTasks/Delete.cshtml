@model Domain.TaskerTask

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <h4 class="title c-grey-900 mT-10 mB-30">Are you sure you want to delete this task?</h4>
    <br/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEstimate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeEstimate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.Id)
        </dd >
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a style="margin-right: 5rem;" class="btn btn-outline-success" role="button" asp-action="Index">Back to List</a>
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
